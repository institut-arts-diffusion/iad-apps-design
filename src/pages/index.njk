{% extends "layouts/login.njk" %} 

{% block content %}
<div class="c-login">
  <div class="c-login__inner">
    <div class="c-login__media">
      <img
        src="/assets/img/iad-logo-login.svg"
        class="c-login__logo"
        alt="Institut des Arts de Diffusion" />
      <picture>
        <source
          media="(min-width: 750px)"
          srcset="/assets/img/loginv-mandalorian.jpg 600w"
          sizes="(min-width: 1200px) 48px;
                    40vw"
          width="600"
          height="800" />
        <img
          src="/assets/img/loginh-mandalorian.jpg"
          srcset="/assets/img/loginh-mandalorian.jpg 1024w"
          sizes="100vw"
          width="800"
          height="450"
          class="c-login__img"
          alt="" />
      </picture>
    </div>
    <div class="c-login__content">
      <div class="c-login__contentinner">
        <form
          method="post"
          class="c-form u-mbe-none"
          action="">
          <p class="c-suptitle">Epreuves d'admission</p>
          <h1 class="c-h1 c-h1--noborder">Inscriptions 2023-2024</h1>
          <p>
            <a href="https://www.iad-arts.be">Institut des Arts de Diffusion</a>
            , amet consectetur adipisicing elit. Inventore, dicta dolore debitis
            doloremque nam consequatur esse laborum illo sint a at perferendis
            beatae temporibus error repudiandae nostrum molestiae labore numquam.
          </p>
          <div class="c-message u-mbe-base">
            <p>
              Les inscriptions sont ouvertes jusqu'au mardi 20 juillet 2024 à
              minuit.
            </p>
          </div>
          <div 
            class="c-stack"
            data-gap="md">
            <div class="c-field">
              <div>
                <label
                  class="c-field-label"
                  for="email">
                  Email
                  <span class="c-field-label__required">*</span>
                </label>
              </div>
              <!-- <div class="c-field-hint">
                  <p>Veuillez entrer votre numéro de téléphone</p>
                </div> -->
              <div class="c-field-input" data-width="full">
                <input
                  type="email"
                  id="email"
                  name="email"
                  required />
                <div>
                  <span class="c-icon" aria-hidden="true">
                    {% include "svg/icons/icon_email.svg" %}
                  </span>
                </div>
              </div>
              <!-- <div class="c-field-hint" data-theme="error">
                  <p>This is a problem with your name</p>
                </div> -->
            </div>
            <div class="c-field">
              <!-- <div class="c-field-hint">
                <p>Le RGPD c'est fantastique</p>
              </div> -->
              <div class="c-field-checkbox">
                <input type="checkbox" id="rgpd">
                <label for="rgpd">
                  J'autorise le traitement de mes données personelles conformément au
                  RGPD.
                </label>
              </div>
              <!-- <div class="c-field-hint" data-theme="error">
                <p>This is a problem with the RGPD</p>
              </div> -->
            </div>
            <div>
              <input
                class="c-button"
                data-variant="primary"
                data-width="full"
                type="button"
                value="Se connecter" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
